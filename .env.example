# Payload Secret - любая случайная строка
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Supabase Connection String (PostgreSQL)
# Используйте Transaction mode (порт 5432 или 6543) из настроек Supabase
DATABASE_URL=postgres://postgres:[PASSWORD]@[HOST]:5432/postgres

# Публичный URL вашего сервера (на Vercel это будет https://your-app.vercel.app)
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Настройки компании
COMPANY_NAME="Payload Inc."
SITE_NAME="Payload Commerce"

# Секрет для предпросмотра черновиков
PREVIEW_SECRET=demo-draft-secret

# Stripe API ключи (если используете платежи)
STRIPE_SECRET_KEY=sk_test_
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_WEBHOOKS_SIGNING_SECRET=whsec_
